@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link textBlue">Sair</button>
            </form>
        </li>
        <li class="nav-item" style="float: right">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Sobre Nós</a>
        </li>
    <li class="nav-item" style="float: right">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Ajuda</a>
        </li>
        <li class="nav-item" style="float: right">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Empresa</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link textBlue" asp-area="Identity" asp-page="/Account/Login">Entrar</a>
        </li>
    }
</ul>
